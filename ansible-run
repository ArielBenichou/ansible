## Install ansible
sudo apt-add-repository -y ppa:ansible/ansible
sudo apt-get update -y
sudo apt-get install -y curl git software-properties-common ansible

## pull ansible
echo "use:"
echo "sudo ansible-pull --ask-vault-pass -U https://github.com/ArielBenichou/ansible.git"
echo "or git clone:"
echo "git clone https://github.com/ArielBenichou/ansible.git"
